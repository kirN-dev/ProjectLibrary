<Window
	x:Class="ProjectLibrary.MVVM.Views.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ProjectLibrary"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="{Binding Title}"
	Width="950"
	Height="450"
	mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<StackPanel>
			<Button
				Height="30"
				Margin="5"
				Command="{Binding NavigateBooksCommand}"
				Content="Книги" />
			<Button
				Height="30"
				Margin="5"
				Command="{Binding NavigateReadersCommand}"
				Content="Читатели" />
			<Button
				Height="30"
				Margin="5"
				Command="{Binding NavigateShelvesCommand}"
				Content="Стелажи" />
			<Button
				Height="30"
				Margin="5"
				Command="{Binding QuitCommand}"
				Content="Выход" />
		</StackPanel>

		<Grid Grid.Column="1">

			<Grid.RowDefinitions>
				<RowDefinition Height="40" />
				<RowDefinition />
			</Grid.RowDefinitions>

			<TextBlock
				FontSize="20"
				FontWeight="Bold"
				Text="{Binding Navigation.CurrentView.Title}" />
			<ContentControl Grid.Row="1" Content="{Binding Navigation.CurrentView}" />
		</Grid>
	</Grid>
</Window>
