<UserControl
	x:Class="ProjectLibrary.MVVM.Views.ShelvesView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ProjectLibrary.MVVM.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>


		<ListView
			Grid.Row="1"
			ItemsSource="{Binding Shelves}"
			SelectedItem="{Binding SelectedShelf}"
			Style="{StaticResource ListShelfStyle}" />


		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<Button
				Grid.Column="0"
				Margin="10"
				Command="{Binding AddShelfCommand}"
				Content="Добавить" />

			<Button
				Grid.Column="1"
				Margin="10"
				Command="{Binding EditShelfCommand}"
				Content="Редактировать" />

			<Button
				Grid.Column="2"
				Margin="10"
				Command="{Binding DeleteShelfCommand}"
				Content="Удалить" />
		</Grid>
	</Grid>
</UserControl>
